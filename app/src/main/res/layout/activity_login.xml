<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.or.tonight.LoginActivity">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold|italic"
        android:textSize="20sp"
        android:id="@+id/login_semi_title"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:text="Sign in to find out what's up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/login_semi_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="40sp"
        android:id="@+id/login_main_title"
        android:textColor="@color/white"
        android:text="Tonight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/login_main_title"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColorHint="#D3D3D3"
        android:textColor="@color/white"
        android:background="@drawable/rounded_background_edit_text_login"
        android:padding="20dp"
        android:id="@+id/login_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Username"
        />

    <EditText
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/login_username"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColorHint="#D3D3D3"
        android:background="@drawable/rounded_background_edit_text_login"
        android:textColor="@color/white"
        android:padding="20dp"
        android:id="@+id/login_password"
        android:hint="Password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

         />

    <TextView
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/login_password"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="logInClicked"
        android:id="@+id/log_in_button"
        android:textColor="@color/white"
        android:background="@drawable/rounded_login_button_background"
        android:padding="20dp"
        android:textSize="20sp"
        android:text="Log In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/log_in_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/white"
        android:onClick="startRegisterActivity"
        android:text="New user? Click here to Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />

</android.support.constraint.ConstraintLayout>
